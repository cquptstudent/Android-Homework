<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">

    <ImageView
        android:id="@+id/img_main_head"
        android:layout_width="151dp"
        android:layout_height="148dp"
        android:layout_marginTop="55dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/cqupt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="223dp"
        android:layout_marginBottom="464dp"
        android:text="@string/SignIn"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_main_username"
        android:layout_width="305dp"
        android:layout_height="59dp"
        android:layout_marginTop="304dp"
        android:layout_marginBottom="368dp"
        android:autofillHints="account"
        android:drawableStart="@drawable/account"
        android:hint="@string/account"
        android:inputType="number"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_main_password"
        android:layout_width="305dp"
        android:layout_height="59dp"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="292dp"
        android:autofillHints="password"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVW
XYZ?!=+-_.,"
        android:drawableStart="@drawable/password"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button_main_login"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:layout_marginTop="514dp"
        android:layout_marginBottom="169dp"
        android:backgroundTint="#E6004E"
        android:text="@string/SignIn"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/have_account"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="439dp"
        android:layout_marginEnd="247dp"
        android:layout_marginBottom="244dp"
        android:backgroundTint="#ffffff"
        android:text="@string/HaveAccount"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
